<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>User email</strong>
  <%= @post.user.email %>
</p>
<p>
	<strong>Created At:</strong>
	<%= @post.created_at.strftime('%A ,%B  %d , %Y') %>
</p>
<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<%= link_to 'Edit', edit_post_path(@post) ,class: "btn btn-primary" %> |
 <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
<%= image_tag current_user.avatar.thumb %>
<div id="comments">

    <%= render 'comments/form', comment: @comment %>

</div>

<% @post.comments.each do |comment| %>
<div class="well">
   
    <p><%=comment.created_at.strftime("%A, %B %e at %I: %M%p")%> , <%= image_tag current_user.avatar.thumb %> said...</p>

    <p><%= comment.comment_entry %></p>
  </div>

<% end %>
